@{
    ViewBag.Title = "Inicio";
}
@if (Session["UserName"] != null)
{
    <div class="alert alert-success alert-dismissible">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        <strong>Bienvendio @Session["UserName"].ToString()!</strong>
    </div>
}
<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">

        <div class="item active">
            <img src="https://s1.eestatic.com/2020/05/14/sociedad/consumo/Consumo_489962894_151984104_1024x576.jpg" alt="Los Angeles" style="width:100%;">
            <div class="carousel-caption">
                <h3 style="color:black">Productos para prevenir COVID en la calle</h3>
                <p style="color:black">Te ofrecemos medidor de temperatura, caretas, etc.</p>
            </div>
        </div>

        <div class="item">
            <img src="https://thepeoplecompany.net/wp-content/uploads/2020/06/Copia-de-sanitizacion1.jpg" alt="Chicago" style="width:100%;">
            <div class="carousel-caption">
                <h3 style="color:black">Servicios de higiene Empresarial</h3>
                <p style="color:black">Desinfectamos tu lugar de trabajo.</p>
            </div>
        </div>

        <div class="item">
            <img src="https://www.restauracioncolectiva.com/admin/app/webroot/files/FotoNota/3611-imagen-desinfeccion_covid_productos.jpg" alt="Chicago" style="width:100%;">
            <div class="carousel-caption">
                <h3 style="color:black">Productos de limpieza</h3>
                <p style="color:black">Te ofrecemos jabón antibacterial, gel actibacterial, alcohol, etc.</p>
            </div>
        </div>

        <div class="item">
            <img src="https://www.desinfeccionysanitizacion.mx/img/Landind_Head.jpg" alt="Chicago" style="width:100%;">
            <div class="carousel-caption">
                <h3>Servicios de higiene para el hogar</h3>
                <p>Desinfectamos tu hogar.</p>
            </div>
        </div>

        <div class="item">
            <img src="https://www.ecestaticos.com/imagestatic/clipping/9da/8d5/9da8d5436f97bd692c59c108aeeee9ac/el-botiquin-esencial-para-luchar-contra-el-coronavirus-en-casa.jpg?mtime=1587116058" alt="New York" style="width:100%;">
            <div class="carousel-caption">
                <h3 style="color:black">Productos para prevenir virus</h3>
                <p style="color:black">Te ofrecemos guantes, mascarillas, toallitas con alcohol, etc.</p>
            </div>
        </div>

    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" style="color:black"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" style="color:black"></span>
        <span class="sr-only">Next</span>
    </a>
</div>